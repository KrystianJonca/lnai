{
  "permissions": {
    "allow": ["Bash(pnpm:*)"],
    "ask": ["Bash(git:*)"],
    "deny": ["Read(.env)"]
  },
  "mcpServers": {
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      }
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-memory"]
    }
  },
  "overrides": {
    "claudeCode": {
      "model": "opus"
    },
    "opencode": {
      "theme": "system"
    }
  }
}
